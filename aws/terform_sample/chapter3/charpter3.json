variable "aws_access_key" {}
variable "aws_secret_key" {}
variable "region" {
    default = "ap-northeast-1"
}

variable "images" {
    default = {
        us-east-1 = "ami-1ecae776"
        us-west-2 = "ami-e7527ed7"
        us-west-1 = "ami-d114f295"
        eu-west-1 = "ami-a10897d6"
        eu-central-1 = "ami-a8221fb5"
        ap-southeast-1 = "ami-68d8e93a"
        ap-southeast-2 = "ami-fd9cecc7"
        ap-northeast-1 = "ami-cbf90ecb"
        sa-east-1 = "ami-b52890a8"
    }
}
 
provider "aws" {
    access_key = "${var.aws_access_key}"
    secret_key = "${var.aws_secret_key}"
    region = "${var.region}"
}

resource "aws_vpc" "VPC領域" {
    cidr_block = "10.0.0.0/16"
    instance_tenancy = "default"
    enable_dns_support = "true"
    enable_dns_hostnames = "false"
    tags {
      Name = "testVPC"
    }
}

resource "aws_internet_gateway" "myGW" {
    vpc_id = "${aws_vpc.VPC領域.id}"
    tags {
        Name = "myGW"
    }
}

resource "aws_route_table" "public-route" {
    vpc_id = "${aws_vpc.VPC領域.id}"
    route {
        cidr_block = "0.0.0.0/0"
        gateway_id = "${aws_internet_gateway.myGW.id}"
    }
    tags {
    	Name = "public-route"
  	}
}

resource "aws_subnet" "パブリックサブネット" {
    vpc_id = "${aws_vpc.VPC領域.id}"
    cidr_block = "10.0.1.0/24"
    availability_zone = "ap-northeast-1a"
}

resource "aws_route_table_association" "パブリックテーブル" {
  route_table_id = "${aws_route_table.public-route.id}"
  subnet_id      = "${aws_subnet.パブリックサブネット.id}"
}


variable "amis" {
  type = "map"

  default = {
    api = "ami-2757f631"
  }
}
variable "key_name" {
  default = "YOUR_SSH_KEY"
}
resource "aws_instance" "example" {
  ami = "${var.amis.api}"
  instance_type = "t2.micro"
  key_name        = "${var.key_name}"
  security_groups = ["${aws_security_group.internal.id}"]
  subnet_id       = "${aws_subnet.パブリックサブネット.id}"
  private_ip = '10.0.1.10'
  tags {
    Name        = "Webサーバー"
  }
}

resource "aws_security_group" "WEB-SG" {
    vpc_id = "${aws_vpc.VPC領域.id}"
    name = "WEB-SG"
    ingress {
        from_port = 22
        to_port = 22
        protocol = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
    ingress {
    	from_port = 80
    	to_port = 80
    	protocol = "tcp"
    	cidr_blocks = ["0.0.0.0/0"]
  	}
    egress {
        from_port = 0
        to_port = 0
        protocol = "-1"
        cidr_blocks = ["0.0.0.0/0"]
    }
    tags {
        Name = "WEB-SG"
    }
}


resource "aws_subnet" "プライベートサブネット" {
    vpc_id = "${aws_vpc.VPC領域.id}"
    cidr_block = "10.0.2.0/24"
    availability_zone = "ap-northeast-1a"
}

